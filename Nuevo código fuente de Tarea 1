<p>Declarar 5 objetos, cada uno con cualidades y 2 metodos.</p>

<p id="demo"></p>

<script>

var soda = {
  brand: "CocaColaCompany",
  brandVariant: "Fanta",
  color: "orange",
  contentInMl: 330,
  price:12,
  fullProfile : function() {
    return "This is a "+ this.brandVariant +" which belongs to "+ this.brand +" and its content in mililitres is " + this.contentInMl+".<br>";
  
  },
  askingForProduct: function(){
      return "Oh God! I love this "+this.color+" drink, Its name is "+this.brandVariant+" and I can get one for $"+this.price+".<br><br>";
  }
};
var ropa= {
    tipo:"bata",
    color:"blanco",
    material:"seda",
    presentacionBata: function() {
        return "Ésta es una prenda de tipo "+this.tipo+", cuyo color es "+this.color+" y está hecha de "+this.material+".<br>";
    },
    coatInfo: function(){
        return "Hola, buenas tardes, estoy buscando una "+this.tipo+" de color"+this.color+" hecha de"+this.material+".<br><br>";
    }
};
var lampara= {
    tipo:"rústica",
    color:"caoba",
    precio: 360,
    lampInfo: function() {
        return "Ésta es una lampara "+this.tipo+" de color "+this.color+ " cuyo precio es de $"+this.precio+".<br>";
    },
    askingForLamp: function(){
        return "Hola, en su catálogo vi una lampara"+this.tipo+" de color "+this.color+" que cuesta $"+this.precio+", la quiero.<br><br>";
    }
};
var telefono= {
    marca:"Samsung",
    modelo:"Galaxy S20 Ultra",
    ramMemo: "16 GB",
    camara: "1080P",
    telInfo: function() {
        return "Éste es un "+this.modelo+" de la marca "+this.marca+" y cuenta con "+this.ramMemo+" de RAM y una cámara de "+this.camara+".<br>";
    },
    buyingTel: function() {
        return "Hola, quiero comprar un "+this.marca+" "+this.modelo+" de "+this.ramMemo+" de RAM.<br><br>";
    }
};
var xbox= {
    enterprise: "Microsoft",
    consoleType: "Xbox One",
    storage: "1 T",
    color: "negra",
    xboxInfo: function() {
        return "This is an "+this.consoleType+", thi console was creates by"+this.enterprise+" and cn store up to "+this.storage+".<br>";
    },
    buyingXbox: function(){
        return "Hola, me gustaría comprar una "+this.consoleType+" con "+this.storage+" de memoria y que sea "+this.color+", Por favor.<br><br>";
    }
};


document.getElementById("demo").innerHTML = soda.fullProfile() +soda.askingForProduct() + ropa.presentacionBata() + ropa.coatInfo()
+ lampara.lampInfo() + lampara.askingForLamp()  + telefono.telInfo() + telefono.buyingTel()
+ xbox.xboxInfo() + xbox.buyingXbox();

</script>

